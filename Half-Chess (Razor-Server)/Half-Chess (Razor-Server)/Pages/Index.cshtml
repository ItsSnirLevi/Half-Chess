@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Register</h1>
</div>


<div class="row mt-4">
    <div>
        <form method="post" autocomplete="on" action="">

            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="User.Id"></label>
                </div>
                <div class="col-sm-2">
                    <label asp-for="User.FirstName">First Name</label>
                </div>
                <div class="col-sm-2">
                    <label asp-for="User.LastName">Last Name</label>
                </div>
                <div class="col-sm-2">
                    <label asp-for="User.Phone"></label>
                </div>
                <div class="col-sm-2">
                    <label asp-for="User.Country"></label>
                </div>

            </div>
            <div class="row mb-3">
                <div class="col-sm-2">
                    <input asp-for="User.Id" class="form-control" />
                    <span asp-validation-for="User.Id" class="text-danger"></span>
                </div>
                <div class="col-sm-2">
                    <input asp-for="User.FirstName" class="form-control" />
                    <span asp-validation-for="User.FirstName" class="text-danger"></span>
                </div>
                <div class="col-sm-2">
                    <input asp-for="User.LastName" class="form-control" />
                </div>
                <div class="col-sm-2">
                    <input asp-for="User.Phone" class="form-control" />
                    <span asp-validation-for="User.Phone" class="text-danger"></span>
                </div>
                <div class="col-sm-2">
                    <select asp-for="User.Country" class="form-control" asp-items="Model.CountryOptions">
                        <option value="">Select a country</option>
                    </select>
                    <span asp-validation-for="User.Country" class="text-danger"></span>
                </div>

            </div>

            <div class="form-group mt-4">
                <button asp-page="" class="btn btn-primary" autofocus>Submit!</button>
            </div>
        </form>
    </div>
</div>

<div class="mt-4">
    <a asp-page="./Users/Index">User DB and Queries</a>
</div>

<div class="mt-3">
    <a href="About">About the Authors</a>
</div>


